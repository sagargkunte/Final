<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard - Healthcare Portal</title>
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
    
    body {
      font-family: 'Inter', sans-serif;
    }
    
    .glass-effect {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.85);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
    }
    
    .card {
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 255, 255, 0.6);
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(31, 38, 135, 0.2);
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #3b82f6, #6366f1);
      transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, #2563eb, #4f46e5);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
    }
    
    .btn-success {
      background: linear-gradient(135deg, #10b981, #059669);
      transition: all 0.3s ease;
    }
    
    .btn-success:hover {
      background: linear-gradient(135deg, #059669, #047857);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(16, 185, 129, 0.3);
    }
    
    .btn-danger {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      transition: all 0.3s ease;
    }
    
    .btn-danger:hover {
      background: linear-gradient(135deg, #dc2626, #b91c1c);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(239, 68, 68, 0.3);
    }
    
    .status-pending {
      background: linear-gradient(135deg, #f59e0b, #d97706);
      color: white;
    }
    
    .status-approved {
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
    }
    
    .status-rejected {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      color: white;
    }
    
    .input-field {
      transition: all 0.2s ease;
    }
    
    .input-field:focus {
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    
    .notification-badge {
      animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
      0% {
        box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7);
      }
      70% {
        box-shadow: 0 0 0 10px rgba(239, 68, 68, 0);
      }
      100% {
        box-shadow: 0 0 0 0 rgba(239, 68, 68, 0);
      }
    }
  </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
  <!-- Header -->
  <header class="glass-effect shadow-sm sticky top-0 z-10">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
      <div class="flex items-center">
        <div class="w-10 h-10 rounded-full bg-gradient-to-r from-blue-600 to-indigo-600 flex items-center justify-center mr-3">
          <i class="fas fa-stethoscope text-white text-xl"></i>
        </div>
        <h1 class="text-xl font-bold text-gray-800">Healthcare Portal Admin</h1>
      </div>
      <div class="flex items-center space-x-4">
        <div class="relative">
          <i class="fas fa-bell text-gray-500 text-xl cursor-pointer hover:text-blue-600 transition-colors"></i>
          <span class="notification-badge absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center"><%= pendingDoctors.length %></span>
        </div>
        <div class="flex items-center space-x-2">
          <div class="h-10 w-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
            <i class="fas fa-user text-white"></i>
          </div>
          <span class="font-medium text-gray-700">Admin</span>
        </div>
         <button onclick="handleLogout()" class="btn-danger px-4 py-2 text-white rounded-lg transition">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </button>
      </div>
    </div>
  </header>

  <div class="container mx-auto px-4 py-6">
    <!-- Dashboard Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Pending Approvals</p>
            <h3 class="text-2xl font-bold text-blue-600 mt-1"><%= pendingDoctors.length %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
            <i class="fas fa-user-md text-white text-xl"></i>
          </div>
        </div>
        <p class="text-xs text-gray-500 mt-2">Doctors waiting for approval</p>
      </div>
      
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Approved Doctors</p>
            <h3 class="text-2xl font-bold text-green-600 mt-1"><%= approvedDoctorsCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center">
            <i class="fas fa-check-circle text-white text-xl"></i>
          </div>
        </div>
        <p class="text-xs text-gray-500 mt-2">Active doctors in the system</p>
      </div>
      
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Rejected Applications</p>
            <h3 class="text-2xl font-bold text-red-600 mt-1"><%= rejectedDoctorsCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-red-500 to-rose-500 rounded-full flex items-center justify-center">
            <i class="fas fa-times-circle text-white text-xl"></i>
          </div>
        </div>
        <p class="text-xs text-gray-500 mt-2">Applications not meeting criteria</p>
      </div>
      
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Total Doctors</p>
            <h3 class="text-2xl font-bold text-purple-600 mt-1"><%= totalDoctorsCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-purple-500 to-violet-500 rounded-full flex items-center justify-center">
            <i class="fas fa-user-injured text-white text-xl"></i>
          </div>
        </div>
        <p class="text-xs text-gray-500 mt-2">All registered doctors</p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Pending Approvals Section -->
      <div class="lg:w-2/3">
        <div class="glass-effect card rounded-2xl overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-800">Pending Doctor Approvals</h2>
            <p class="text-sm text-gray-500">Review and approve doctor registrations</p>
          </div>
          
          <!-- Search and Filter -->
          <div class="px-6 py-4 bg-gray-50/50 flex flex-col sm:flex-row justify-between gap-4">
            <div class="relative flex-1 max-w-md">
              <input type="text" placeholder="Search doctors..." class="input-field w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
              <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
            </div>
            <div class="flex space-x-2">
              <select class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none">
                <option>Sort by: Newest</option>
                <option>Sort by: Oldest</option>
                <option>Sort by: Name</option>
              </select>
            </div>
          </div>
          
          <!-- Doctor List -->
          <div class="divide-y divide-gray-200/50">
            <% if (pendingDoctors.length > 0) { %>
              <% pendingDoctors.forEach(doctor => { %>
                <div class="p-6 hover:bg-blue-50/50 transition-colors duration-200" data-doctor-id="<%= doctor %>">
                  <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <div class="flex items-start space-x-4">
                      <div class="h-14 w-14 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-user-md text-white text-xl"></i>
                      </div>
                      <div>
                        <h3 class="font-semibold text-gray-800">Dr. <%= doctor.name %></h3>
                        <p class="text-sm text-gray-600"><%= doctor.email %></p>
                        <div class="flex flex-wrap gap-2 mt-2">
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            <i class="fas fa-user mr-1"></i> <%= doctor.gender || 'Not specified' %>
                          </span>
                          <% if (doctor.age) { %>
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              <i class="fas fa-birthday-cake mr-1"></i> <%= doctor.age %> years
                            </span>
                          <% } %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium status-pending">
                            <i class="fas fa-clock mr-1"></i> Pending Approval
                          </span>
                        </div>
                      </div>
                    </div>
                    <div class="flex flex-wrap gap-2">
                      <button onclick="viewDoctor('<%= doctor.doctorid %>')" class="btn-primary px-4 py-2 text-white rounded-lg transition-colors duration-200 flex items-center">
                        <i class="fas fa-eye mr-2"></i> View Details
                      </button>
                      <form action="/adminPage/approve-doctor/<%= doctor.doctorid %>" method="GET" class="inline">
                        <button type="submit" class="btn-success px-4 py-2 text-white rounded-lg transition-colors duration-200 flex items-center">
                          <i class="fas fa-check mr-2"></i> Approve
                        </button>
                      </form>
                      <form action="/adminPage/reject-doctor/<%= doctor.doctorid %>" method="GET" class="inline">
                        <button type="submit" class="btn-danger px-4 py-2 text-white rounded-lg transition-colors duration-200 flex items-center">
                          <i class="fas fa-times mr-2"></i> Reject
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="p-8 text-center">
                <i class="fas fa-user-md text-gray-400 text-4xl mb-4"></i>
                <h3 class="text-lg font-medium text-gray-700">No Pending Approvals</h3>
                <p class="text-gray-500 mt-2">All doctor applications have been reviewed.</p>
              </div>
            <% } %>
          </div>
          
          <!-- Pagination -->
          <% if (pendingDoctors.length > 0) { %>
            <div class="px-6 py-4 border-t border-gray-200/50 flex justify-between items-center">
              <p class="text-sm text-gray-600">Showing <%= pendingDoctors.length %> pending approvals</p>
              <div class="flex space-x-2">
                <button class="px-3 py-1 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors">
                  <i class="fas fa-chevron-left"></i>
                </button>
                <button class="px-3 py-1 bg-blue-600 text-white rounded-lg">1</button>
                <button class="px-3 py-1 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors">
                  <i class="fas fa-chevron-right"></i>
                </button>
              </div>
            </div>
          <% } %>
        </div>
      </div>
      
      <!-- Sidebar -->
      <div class="lg:w-1/3">
        <!-- Quick Actions -->
        <div class="glass-effect card rounded-2xl mb-6">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-800">Quick Actions</h2>
          </div>
          <div class="p-6 space-y-4">
            <a href="/admin/doctors" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-blue-50 transition-colors duration-200">
              <div class="flex items-center">
                <div class="h-10 w-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center mr-3">
                  <i class="fas fa-user-md text-white"></i>
                </div>
                <span class="font-medium text-gray-700">Manage Doctors</span>
              </div>
              <i class="fas fa-chevron-right text-gray-400"></i>
            </a>
            
            <a href="/admin/patients" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-blue-50 transition-colors duration-200">
              <div class="flex items-center">
                <div class="h-10 w-10 bg-gradient-to-r from-green-500 to-emerald-500 rounded-lg flex items-center justify-center mr-3">
                  <i class="fas fa-user-injured text-white"></i>
                </div>
                <span class="font-medium text-gray-700">Patient Records</span>
              </div>
              <i class="fas fa-chevron-right text-gray-400"></i>
            </a>
            
            <a href="/admin/appointments" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-blue-50 transition-colors duration-200">
              <div class="flex items-center">
                <div class="h-10 w-10 bg-gradient-to-r from-purple-500 to-violet-500 rounded-lg flex items-center justify-center mr-3">
                  <i class="fas fa-calendar-alt text-white"></i>
                </div>
                <span class="font-medium text-gray-700">Appointments</span>
              </div>
              <i class="fas fa-chevron-right text-gray-400"></i>
            </a>
            
            <a href="/admin/settings" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-blue-50 transition-colors duration-200">
              <div class="flex items-center">
                <div class="h-10 w-10 bg-gradient-to-r from-yellow-500 to-amber-500 rounded-lg flex items-center justify-center mr-3">
                  <i class="fas fa-cog text-white"></i>
                </div>
                <span class="font-medium text-gray-700">System Settings</span>
              </div>
              <i class="fas fa-chevron-right text-gray-400"></i>
            </a>
          </div>
        </div>
        
        <!-- Recent Activity -->
        <div class="glass-effect card rounded-2xl">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-800">Recent Activity</h2>
          </div>
          <div class="p-4">
            <div class="space-y-4">
              <div class="flex items-start">
                <div class="h-8 w-8 bg-blue-100 rounded-full flex items-center justify-center mr-3 mt-1">
                  <i class="fas fa-user-plus text-blue-600 text-sm"></i>
                </div>
                <div>
                  <p class="text-sm text-gray-700">New doctor registration</p>
                  <p class="text-xs text-gray-500">2 hours ago</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="h-8 w-8 bg-green-100 rounded-full flex items-center justify-center mr-3 mt-1">
                  <i class="fas fa-check text-green-600 text-sm"></i>
                </div>
                <div>
                  <p class="text-sm text-gray-700">Doctor application approved</p>
                  <p class="text-xs text-gray-500">5 hours ago</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="h-8 w-8 bg-red-100 rounded-full flex items-center justify-center mr-3 mt-1">
                  <i class="fas fa-times text-red-600 text-sm"></i>
                </div>
                <div>
                  <p class="text-sm text-gray-700">Doctor application rejected</p>
                  <p class="text-xs text-gray-500">Yesterday</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="glass-effect border-t border-gray-200/50 mt-12">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-600 text-sm">Â© 2023 Healthcare Portal. All rights reserved.</p>
        <div class="flex space-x-4 mt-4 md:mt-0">
          <a href="#" class="text-gray-500 hover:text-blue-600 transition-colors">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-gray-500 hover:text-blue-600 transition-colors">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="text-gray-500 hover:text-blue-600 transition-colors">
            <i class="fab fa-linkedin-in"></i>
          </a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Modal for Doctor Details (hidden by default) -->
  <div id="doctorModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50 hidden">
    <div class="glass-effect rounded-2xl shadow-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto border border-white/50">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <h3 class="text-xl font-semibold text-gray-800">Doctor Details</h3>
        <button id="closeModal" class="text-gray-500 hover:text-gray-700 transition-colors">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <div class="p-6" id="doctorDetails">
        <!-- Doctor details will be populated here -->
      </div>
    </div>
  </div>

  <script>
    // Modal functionality
    function viewDoctor(doctorId) {
      // In a real application, you would fetch doctor details from your API
      // For now, we'll show a static message
      document.getElementById('doctorDetails').innerHTML = `
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="h-20 w-20 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
              <i class="fas fa-user-md text-white text-2xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-bold">Loading...</h3>
              <p class="text-gray-600">Fetching doctor details</p>
            </div>
          </div>
          <div class="text-center py-8">
            <i class="fas fa-spinner fa-spin text-blue-600 text-2xl mb-2"></i>
            <p class="text-gray-500">Loading doctor information</p>
          </div>
        </div>
      `;
      
      document.getElementById('doctorModal').classList.remove('hidden');
      
      // Simulate API call to fetch doctor details
      setTimeout(() => {
        // This would be replaced with actual data from your API
        document.getElementById('doctorDetails').innerHTML = `
          <div class="space-y-4">
            <div class="flex items-center space-x-4">
              <div class="h-20 w-20 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
                <i class="fas fa-user-md text-white text-2xl"></i>
              </div>
              <div>
                <h3 class="text-xl font-bold">Doctor ID: ${doctorId}</h3>
                <p class="text-gray-600">Pending Approval</p>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">Status</label>
                <p class="mt-1"><span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium status-pending">Pending</span></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Application Date</label>
                <p class="mt-1">Just now</p>
              </div>
            </div>
            
            <div class="border-t pt-4">
              <p class="text-sm text-gray-500">Full details would be loaded from your database here.</p>
            </div>
          </div>
        `;
      }, 1000);
    }

    const closeModal = document.getElementById('closeModal');
    
    closeModal.addEventListener('click', () => {
      document.getElementById('doctorModal').classList.add('hidden');
    });
    
    // Close modal when clicking outside
    document.getElementById('doctorModal').addEventListener('click', (e) => {
      if (e.target === document.getElementById('doctorModal')) {
        document.getElementById('doctorModal').classList.add('hidden');
      }
    });

    // Search functionality
    const searchInput = document.querySelector('input[placeholder="Search doctors..."]');
    searchInput.addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const doctorCards = document.querySelectorAll('[data-doctor-id]');
      
      doctorCards.forEach(card => {
        const doctorName = card.querySelector('h3').textContent.toLowerCase();
        const doctorEmail = card.querySelector('p.text-sm').textContent.toLowerCase();
        
        if (doctorName.includes(searchTerm) || doctorEmail.includes(searchTerm)) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
    // Logout
        async function handleLogout() {
            try {
                const response = await fetch('/admin/logout', {
                    method: 'POST'
                });
                const data = await response.json();
                if (data.success) {
                    window.location.href = '/';
                }
            } catch (error) {
                window.location.href = '/';
            }
        }


  </script>
</body>
</html>