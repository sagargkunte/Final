  <script>
    // Modal functionality
    async function viewDoctor(doctorId) {
      // Show loading state
      document.getElementById('doctorDetails').innerHTML = `
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="h-20 w-20 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
              <i class="fas fa-user-md text-white text-2xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-bold">Loading...</h3>
              <p class="text-gray-600">Fetching doctor details</p>
            </div>
          </div>
          <div class="text-center py-8">
            <i class="fas fa-spinner fa-spin text-blue-600 text-2xl mb-2"></i>
            <p class="text-gray-500">Loading doctor information</p>
          </div>
        </div>
      `;
      
      document.getElementById('doctorModal').classList.remove('hidden');
      
      try {
        // Fetch doctor details from API
        const response = await fetch(`/adminPage/doctor-details/${doctorId}`);
        const data = await response.json();
        
        if (data.success) {
          const doctor = data.doctor;
          renderDoctorDetails(doctor);
        } else {
          document.getElementById('doctorDetails').innerHTML = `
            <div class="text-center py-8">
              <i class="fas fa-exclamation-triangle text-red-500 text-3xl mb-4"></i>
              <h3 class="text-lg font-medium text-gray-700">Error Loading Details</h3>
              <p class="text-gray-500 mt-2">${data.message || 'Could not load doctor details'}</p>
            </div>
          `;
        }
      } catch (error) {
        console.error('Error fetching doctor details:', error);
        document.getElementById('doctorDetails').innerHTML = `
          <div class="text-center py-8">
            <i class="fas fa-exclamation-triangle text-red-500 text-3xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-700">Error Loading Details</h3>
            <p class="text-gray-500 mt-2">Network error. Please try again.</p>
          </div>
        `;
      }
    }

    function renderDoctorDetails(doctor) {
      const formattedDate = doctor.createdAt ? new Date(doctor.createdAt).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      }) : 'Not available';
      
      const licenseUploadedAt = doctor.licenseUploadedAt ? new Date(doctor.licenseUploadedAt).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      }) : 'Not uploaded';
      
      // Check if license is PDF or image
      const licenseUrl = doctor.medicalLicenseUrl;
      const isPDF = licenseUrl && licenseUrl.toLowerCase().endsWith('.pdf');
      const isImage = licenseUrl && (licenseUrl.toLowerCase().endsWith('.jpg') || 
                                   licenseUrl.toLowerCase().endsWith('.jpeg') || 
                                   licenseUrl.toLowerCase().endsWith('.png'));
      
      let licensePreviewHTML = '';
      if (licenseUrl) {
        if (isPDF) {
          licensePreviewHTML = `
            <div class="mb-4">
              <h4 class="text-lg font-semibold text-gray-800 mb-2">Medical License Preview</h4>
              <div class="license-preview">
                <iframe src="${licenseUrl}" class="pdf-embed"></iframe>
              </div>
              <div class="mt-2 flex items-center space-x-2">
                <a href="${licenseUrl}" target="_blank" class="text-blue-600 hover:text-blue-800 flex items-center">
                  <i class="fas fa-external-link-alt mr-1"></i> Open in new tab
                </a>
                <span class="text-gray-500">|</span>
                <a href="${licenseUrl}" download class="text-green-600 hover:text-green-800 flex items-center">
                  <i class="fas fa-download mr-1"></i> Download PDF
                </a>
              </div>
            </div>
          `;
        } else if (isImage) {
          licensePreviewHTML = `
            <div class="mb-4">
              <h4 class="text-lg font-semibold text-gray-800 mb-2">Medical License Preview</h4>
              <div class="license-preview flex items-center justify-center p-4">
                <img src="${licenseUrl}" alt="Medical License" class="image-preview">
              </div>
              <div class="mt-2 flex items-center space-x-2">
                <a href="${licenseUrl}" target="_blank" class="text-blue-600 hover:text-blue-800 flex items-center">
                  <i class="fas fa-external-link-alt mr-1"></i> Open full image
                </a>
                <span class="text-gray-500">|</span>
                <a href="${licenseUrl}" download class="text-green-600 hover:text-green-800 flex items-center">
                  <i class="fas fa-download mr-1"></i> Download Image
                </a>
              </div>
            </div>
          `;
        } else {
          licensePreviewHTML = `
            <div class="mb-4">
              <h4 class="text-lg font-semibold text-gray-800 mb-2">Medical License</h4>
              <div class="p-4 bg-gray-100 rounded-lg">
                <p class="text-gray-700">License file uploaded: <a href="${licenseUrl}" target="_blank" class="text-blue-600 hover:text-blue-800">View License</a></p>
                <p class="text-sm text-gray-500 mt-1">Uploaded on: ${licenseUploadedAt}</p>
              </div>
            </div>
          `;
        }
      } else {
        licensePreviewHTML = `
          <div class="mb-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
            <div class="flex items-center">
              <i class="fas fa-exclamation-triangle text-yellow-500 mr-2"></i>
              <p class="text-yellow-700">No medical license uploaded</p>
            </div>
          </div>
        `;
      }
      
      document.getElementById('doctorDetails').innerHTML = `
        <div class="space-y-6">
          <!-- Doctor Header -->
          <div class="flex flex-col md:flex-row items-start md:items-center space-y-4 md:space-y-0 md:space-x-6">
            <div class="h-24 w-24 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center flex-shrink-0">
              <i class="fas fa-user-md text-white text-3xl"></i>
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-bold text-gray-800">Dr. ${doctor.name}</h3>
              <p class="text-gray-600">${doctor.email}</p>
              <div class="flex flex-wrap gap-2 mt-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${doctor.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : doctor.status === 'approved' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}">
                  <i class="fas ${doctor.status === 'pending' ? 'fa-clock' : doctor.status === 'approved' ? 'fa-check-circle' : 'fa-times-circle'} mr-1"></i>
                  ${doctor.status.charAt(0).toUpperCase() + doctor.status.slice(1)}
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  <i class="fas fa-id-card mr-1"></i> ID: ${doctor.doctorid}
                </span>
              </div>
            </div>
          </div>
          
          <!-- Doctor Information Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Personal Information</label>
              <p class="text-gray-800"><strong>Gender:</strong> ${doctor.gender || 'Not specified'}</p>
              <p class="text-gray-800"><strong>Phone:</strong> ${doctor.phone || 'Not specified'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Professional Information</label>
              <p class="text-gray-800"><strong>Specialization:</strong> ${doctor.specialization || 'Not specified'}</p>
              <p class="text-gray-800"><strong>Location:</strong> ${doctor.location || 'Not specified'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Hospital Details</label>
              <p class="text-gray-800"><strong>Hospital Name:</strong> ${doctor.hospitalName || 'Not specified'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Account Information</label>
              <p class="text-gray-800"><strong>Registered:</strong> ${formattedDate}</p>
              <p class="text-gray-800"><strong>License Uploaded:</strong> ${licenseUploadedAt}</p>
            </div>
          </div>
          
          <!-- License Preview -->
          ${licensePreviewHTML}
          
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4 pt-4 border-t">
            <form action="/adminPage/approve-doctor/${doctor.doctorid}" method="GET" class="inline">
              <button type="submit" class="btn-success px-6 py-3 text-white rounded-lg transition-colors duration-200 flex items-center">
                <i class="fas fa-check mr-2"></i> Approve Application
              </button>
            </form>
            <form action="/adminPage/reject-doctor/${doctor.doctorid}" method="GET" class="inline">
              <button type="submit" class="btn-danger px-6 py-3 text-white rounded-lg transition-colors duration-200 flex items-center">
                <i class="fas fa-times mr-2"></i> Reject Application
              </button>
            </form>
            <button onclick="closeModal()" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200 flex items-center">
              <i class="fas fa-times mr-2"></i> Close
            </button>
          </div>
        </div>
      `;
    }

    function closeModal() {
      document.getElementById('doctorModal').classList.add('hidden');
    }

    const closeModalBtn = document.getElementById('closeModal');
    closeModalBtn.addEventListener('click', closeModal);
    
    // Close modal when clicking outside
    document.getElementById('doctorModal').addEventListener('click', (e) => {
      if (e.target === document.getElementById('doctorModal')) {
        closeModal();
      }
    });

    // Search functionality
    const searchInput = document.querySelector('input[placeholder="Search doctors..."]');
    searchInput.addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const doctorCards = document.querySelectorAll('[data-doctor-id]');
      
      doctorCards.forEach(card => {
        const doctorName = card.querySelector('h3').textContent.toLowerCase();
        const doctorEmail = card.querySelector('p.text-sm').textContent.toLowerCase();
        
        if (doctorName.includes(searchTerm) || doctorEmail.includes(searchTerm)) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
    
    // Logout
    async function handleLogout() {
      try {
        const response = await fetch('/admin/logout', {
          method: 'POST'
        });
        const data = await response.json();
        if (data.success) {
          window.location.href = '/';
        }
      } catch (error) {
        window.location.href = '/';
      }
    }
  </script>
</body>
</html>